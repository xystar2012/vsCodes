            "program": "build",
            "args": ["-fThreading"],
            "stopAtEntry": false,
            "cwd": "/mnt/d/Local_SvnDir/Codes/STL_Demo",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "build",
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
