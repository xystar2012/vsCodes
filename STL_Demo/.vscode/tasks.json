{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    
    "tasks": [
                {
                    "taskName": "debug",
                    "command": "cmd",
                    "args": [ "/c","build.bat","${fileBasenameNoExtension}"
                        
                    ],
                    "isShellCommand": true,
                    "showOutput": "always",
                    "isBuildCommand": true
                },
                {
                    
                    "taskName": "build",
                    "isBuildCommand": true,
                    "isShellCommand": true,
                    "args": [ "-c","make Makefile"],
                    "showOutput": "always"
                }
            ]
}